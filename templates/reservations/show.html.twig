{% extends 'base_dashboard.html.twig' %}

{% block title %}Détails de la Réservation - EzGo Dashboard{% endblock %}

{% block page_title %}Détails de la Réservation{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h6>Reservation Details</h6>
                    <div>
                        <a href="{{ path('app_reservations_edit', {'idRes': reservation.idRes}) }}" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="{{ path('app_reservations_index') }}" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-group mb-3">
                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Client Name</h6>
                            <p class="text-sm mb-0">{{ reservation.nameRes }}</p>
                        </div>
                        <div class="info-group mb-3">
                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Reservation Date</h6>
                            <p class="text-sm mb-0">{{ reservation.dateRes|date('Y-m-d H:i:s') }}</p>
                        </div>
                        <div class="info-group mb-3">
                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Status</h6>
                            <span class="badge badge-sm bg-{{ reservation.statut == 'en attente' ? 'warning' : (reservation.statut == 'confirmé' ? 'success' : 'danger') }}">
                                {{ reservation.statut|capitalize }}
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-group mb-3">
                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Car Details</h6>
                            {% if reservation.car %}
                                <p class="text-sm mb-0">
                                    <strong>Brand:</strong> {{ reservation.car.marque }}<br>
                                    <strong>Registration:</strong> {{ reservation.car.immatriculation }}<br>
                                    <strong>State:</strong> 
                                    <span class="badge badge-sm bg-{{ reservation.car.etat == 'disponible' ? 'success' : (reservation.car.etat == 'maintenance' ? 'warning' : 'danger') }}">
                                        {{ reservation.car.etat|capitalize }}
                                    </span>
                                </p>
                            {% else %}
                                <p class="text-sm mb-0 text-muted">No car associated with this reservation</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <form method="post" action="{{ path('app_reservations_delete', {'idRes': reservation.idRes}) }}" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idRes) }}">
                        <button class="btn btn-danger">
                            <i class="far fa-trash-alt"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 