{% extends 'base_dashboard.html.twig' %}

{% block title %}Modifier la Réservation - EzGo Dashboard{% endblock %}

{% block page_title %}Modifier la Réservation{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h6>Edit Reservation</h6>
                    <a href="{{ path('app_reservations_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                    <div class="col-md-6">
                        {{ form_row(form.nameRes, {
                            'label': 'Client Name',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Enter client name'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.dateRes, {
                            'label': 'Reservation Date',
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.statut, {
                            'label': 'Status',
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.car, {
                            'label': 'Car',
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 