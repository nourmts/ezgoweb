{% extends 'base_dashboard.html.twig' %}

{% block title %}Dashboard - EzGo{% endblock %}

{% block page_title %}Dashboard Overview{% endblock %}

{% block body %}
<div class="row">
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Total Cars</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ voitures|length }}
                            </h5>
                            <p class="mb-0">
                                <span class="text-success text-sm font-weight-bolder">
                                    {% set available = voitures|filter(v => v.etat == 'disponible')|length %}
                                    {{ available }} available
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                            <i class="fas fa-car text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Total Reservations</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ reservations|length }}
                            </h5>
                            <p class="mb-0">
                                <span class="text-warning text-sm font-weight-bolder">
                                    {% set pending = reservations|filter(r => r.statut == 'en attente')|length %}
                                    {{ pending }} pending
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                            <i class="fas fa-calendar-check text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Confirmed Reservations</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ reservations|filter(r => r.statut == 'confirmé')|length }}
                            </h5>
                            <p class="mb-0">
                                <span class="text-success text-sm font-weight-bolder">
                                    Active bookings
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                            <i class="fas fa-check-circle text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-capitalize font-weight-bold">Cars in Maintenance</p>
                            <h5 class="font-weight-bolder mb-0">
                                {{ voitures|filter(v => v.etat == 'maintenance')|length }}
                            </h5>
                            <p class="mb-0">
                                <span class="text-danger text-sm font-weight-bolder">
                                    Unavailable
                                </span>
                            </p>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                            <i class="fas fa-tools text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-lg-7 mb-lg-0 mb-4">
        <div class="card">
            <div class="card-header pb-0">
                <div class="d-flex justify-content-between">
                    <h6>Recent Reservations</h6>
                    <a href="{{ path('app_reservations_index') }}" class="btn btn-link text-secondary mb-0">
                        <i class="fa fa-ellipsis-v text-xs"></i>
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Client</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Car</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reservation in reservations|slice(0, 5) %}
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">{{ reservation.nameRes }}</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-sm font-weight-bold mb-0">{{ reservation.car.marque }}</p>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="text-secondary text-sm font-weight-bold">{{ reservation.dateRes|date('Y-m-d') }}</span>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="badge badge-sm bg-{{ reservation.statut == 'en attente' ? 'warning' : (reservation.statut == 'confirmé' ? 'success' : 'danger') }}">
                                        {{ reservation.statut|capitalize }}
                                    </span>
                                </td>
                                <td class="align-middle">
                                    <a href="{{ path('app_reservations_show', {'idRes': reservation.idRes}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="View reservation">
                                        View
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="5" class="text-center">No reservations found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card h-100">
            <div class="card-header pb-0">
                <div class="d-flex justify-content-between">
                    <h6>Available Cars</h6>
                    <a href="{{ path('app_voiture_index') }}" class="btn btn-link text-secondary mb-0">
                        <i class="fa fa-ellipsis-v text-xs"></i>
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Car</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Registration</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                <th class="text-secondary opacity-7"></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for voiture in voitures|filter(v => v.etat == 'disponible')|slice(0, 5) %}
                            <tr>
                                <td>
                                    <div class="d-flex px-2 py-1">
                                        <div>
                                            {% if voiture.image %}
                                                <img src="{{ asset('uploads/cars/' ~ voiture.image) }}" class="avatar me-3" alt="car">
                                            {% else %}
                                                <img src="{{ asset('soft-ui-dashboard/assets/img/car-placeholder.jpg') }}" class="avatar me-3" alt="car">
                                            {% endif %}
                                        </div>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h6 class="mb-0 text-sm">{{ voiture.marque }}</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="text-sm font-weight-bold mb-0">{{ voiture.immatriculation }}</p>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="badge badge-sm bg-success">Available</span>
                                </td>
                                <td class="align-middle">
                                    <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="View car">
                                        View
                                    </a>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="4" class="text-center">No available cars found</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h6>Quick Actions</h6>
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="row p-4">
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_voiture_new') }}" class="btn btn-primary w-100">
                            <i class="fas fa-plus-circle me-2"></i> Add New Car
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_voiture_index') }}" class="btn btn-info w-100">
                            <i class="fas fa-car me-2"></i> Manage Cars
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_reservations_index') }}" class="btn btn-success w-100">
                            <i class="fas fa-calendar-check me-2"></i> Manage Reservations
                        </a>
                    </div>
                    <div class="col-md-3 mb-3">
                        <a href="{{ path('app_home') }}" class="btn btn-secondary w-100">
                            <i class="fas fa-globe me-2"></i> View Website
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 