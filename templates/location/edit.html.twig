{% extends 'home/base.html.twig' %}

{% block title %}Modifier la Location{% endblock %}

{% block body %}
    <div class="hero-wrap" style="background-image: url('{{ asset('assets/images/bg_1.jpg') }}');">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text d-flex align-item-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <p class="breadcrumbs"><span class="mr-2"><a href="{{ path('app_index') }}">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Modifier la Location</span></p>
            <h1 class="mb-3 bread">Modifier la Location</h1>
          </div>
        </div>
      </div>
    </div>

    <section class="ftco-section">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'p-5 bg-light'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <button class="btn btn-primary">Enregistrer les modifications</button>
                            <a href="{{ path('app_location_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
                        </div>
                    </div>
                {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
{% endblock %}