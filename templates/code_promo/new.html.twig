{% extends 'base.html.twig' %}

{% block title %}Nouveau code promo{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Créer un nouveau code promo</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.code) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.pourcentage) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.dateExpiration) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.utilisationsMax) }}
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Créer</button>
                <a href="{{ path('app_code_promo_index') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %} 