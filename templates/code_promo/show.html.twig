{% extends 'base.html.twig' %}

{% block title %}Code promo{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Code promo</h1>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Code</th>
                            <td>{{ code_promo.code }}</td>
                        </tr>
                        <tr>
                            <th>Pourcentage</th>
                            <td>{{ code_promo.pourcentage }}%</td>
                        </tr>
                        <tr>
                            <th>Date d'expiration</th>
                            <td>{{ code_promo.dateExpiration ? code_promo.dateExpiration|date('Y-m-d H:i:s') : 'Non définie' }}</td>
                        </tr>
                        <tr>
                            <th>Utilisations</th>
                            <td>{{ code_promo.utilisations }}</td>
                        </tr>
                        <tr>
                            <th>Utilisations maximum</th>
                            <td>{{ code_promo.utilisationsMax ?? 'Illimité' }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_code_promo_edit', {'id': code_promo.id}) }}" class="btn btn-warning">Modifier</a>
            <a href="{{ path('app_code_promo_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %} 