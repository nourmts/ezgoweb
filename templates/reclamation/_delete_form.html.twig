<form method="post" action="{{ path('app_reclamation_delete', {'idReclamation': reclamation.idReclamation}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_reclamation_' ~ reclamation.idReclamation) }}">
    <button class="btn {{ button_class|default('btn-danger') }}">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button>
</form>
