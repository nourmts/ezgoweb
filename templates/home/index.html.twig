{% extends 'base_front.html.twig' %}

{% block title %}EzGo - Location de Voitures{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-wrap {
            height: 100vh;
            min-height: 600px;
            background-image: url('https://images.unsplash.com/photo-1485291571150-772bcfc10da5?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            position: relative;
        }
        .hero-wrap::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
        }
        .hero-content {
            position: relative;
            z-index: 1;
            color: white;
            text-align: center;
            padding-top: 200px;
        }
        .hero-content h1 {
            font-size: 4rem;
            font-weight: 700;
            margin-bottom: 2rem;
        }
        .hero-content p {
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }
        .btn-primary {
            background: #ff6b35;
            border-color: #ff6b35;
            padding: 15px 30px;
            border-radius: 30px;
            font-weight: 500;
            margin-right: 15px;
        }
        .btn-primary:hover {
            background: #ff8c5a;
            border-color: #ff8c5a;
        }
        .btn-login {
            background: transparent;
            border: 2px solid white;
            color: white;
            padding: 15px 30px;
            border-radius: 30px;
            font-weight: 500;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
        }
        .btn-login:hover {
            background: white;
            color: #ff6b35;
            text-decoration: none;
        }
        .btn-login i {
            margin-right: 8px;
        }
        .buttons-container {
            display: flex;
            justify-content: center;
            gap: 15px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="hero-wrap">
        <div class="container">
            <div class="hero-content">
                <h1>EzGo - Location de Voitures en Tunisie</h1>
                <p>Découvrez notre sélection de véhicules et profitez de nos meilleurs tarifs</p>
                <div class="buttons-container">
                    <a href="{{ path('app_partenaire_front') }}" class="btn btn-primary btn-lg">
                        Découvrir nos partenaires
                    </a>
                    <a href="{{ path('app_login') }}" class="btn-login">
                        <i class="fas fa-user"></i>
                        Se connecter
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 