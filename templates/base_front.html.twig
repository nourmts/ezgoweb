<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
            <style>
                /* Navbar Styles */
                .ftco_navbar {
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    z-index: 1000;
                    padding: 20px 0;
                }
                .ftco-navbar-light {
                    background: transparent !important;
                    position: absolute;
                    left: 0;
                    right: 0;
                    z-index: 3;
                }
                .ftco-navbar-light .navbar-brand {
                    color: #fff;
                    font-weight: 800;
                    font-size: 24px;
                }
                .ftco-navbar-light .navbar-brand span {
                    color: #ff6b35;
                }
                .ftco-navbar-light .navbar-nav > .nav-item > .nav-link {
                    font-size: 15px;
                    padding-top: 1.5rem;
                    padding-bottom: 1.5rem;
                    padding-left: 20px;
                    padding-right: 20px;
                    color: #fff;
                    font-weight: 500;
                }
                .ftco-navbar-light .navbar-nav > .nav-item > .nav-link:hover {
                    color: #ff6b35;
                }
                .ftco-navbar-light .navbar-nav > .nav-item.active > .nav-link {
                    color: #ff6b35;
                }
                @media (max-width: 991.98px) {
                    .ftco-navbar-light {
                        background: #000 !important;
                        position: relative;
                        top: 0;
                        padding: 10px 0;
                    }
                    .ftco-navbar-light .navbar-nav > .nav-item > .nav-link {
                        padding-left: 0;
                        padding-right: 0;
                        padding-top: .9rem;
                        padding-bottom: .9rem;
                        color: rgba(255,255,255,.7);
                    }
                }
            </style>
        {% endblock %}

        {% block javascripts_head %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_index') }}">Auto<span>road</span></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="ftco-nav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item {% if app.request.get('_route') == 'app_index' %}active{% endif %}">
                            <a href="{{ path('app_index') }}" class="nav-link">Accueil</a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') starts with 'app_partenaire' %}active{% endif %}">
                            <a href="{{ path('app_partenaire_index') }}" class="nav-link">Partenaires</a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') starts with 'app_location' %}active{% endif %}">
                            <a href="{{ path('app_location_index') }}" class="nav-link">Locations</a>
                        </li>
                        <li class="nav-item {% if app.request.get('_route') == 'app_contact' %}active{% endif %}">
                            <a href="{{ path('app_contact') }}" class="nav-link">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- END nav -->

        {% block body %}{% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                $(window).scroll(function() {
                    if ($(this).scrollTop() > 100) {
                        $('.ftco-navbar-light').addClass('scrolled');
                        $('.ftco-navbar-light').css('background', '#000 !important');
                    } else {
                        $('.ftco-navbar-light').removeClass('scrolled');
                        $('.ftco-navbar-light').css('background', 'transparent !important');
                    }
                });
            </script>
        {% endblock %}
    </body>
</html> 