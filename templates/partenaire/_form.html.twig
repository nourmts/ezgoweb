{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-group {
            margin-bottom: 1rem;
        }
        .form-control {
            display: block;
            width: 100%;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            border: 1px solid #ced4da;
            border-radius: 0.25rem;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }
        .form-control:focus {
            color: #495057;
            background-color: #fff;
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
    </style>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Nom</label>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du partenaire'}}) }}
            </div>
            <div class="form-group">
                <label>Spécialité</label>
                {{ form_widget(form.specialite, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                <label>Tarif (DT)</label>
                {{ form_widget(form.tarif, {'attr': {'class': 'form-control', 'placeholder': 'Ex: 50.00'}}) }}
            </div>
            <div class="form-group">
                <label>Régions</label>
                {{ form_widget(form.regions, {'attr': {'class': 'form-control', 'multiple': true, 'data-placeholder': 'Sélectionnez une ou plusieurs régions'}}) }}
                <small class="form-text text-muted">Maintenez Ctrl (Windows) ou Cmd (Mac) pour sélectionner plusieurs régions</small>
            </div>
        </div>
    </div>
    <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
{% endblock %}