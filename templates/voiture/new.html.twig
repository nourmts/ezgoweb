{% extends 'base_dashboard.html.twig' %}

{% block title %}New Car - EzGo Dashboard{% endblock %}

{% block page_title %}Add New Car{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Add New Car</h6>
                        <a href="{{ path('app_voiture_index') }}" class="btn btn-outline-secondary btn-sm mb-0">
                            <i class="fas fa-arrow-left me-2"></i>Back to list
                        </a>
                    </div>
                    <p class="text-sm mb-0">Enter the car details below</p>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                        <div class="col-md-6">
                            <label class="form-label">Registration Number</label>
                            {{ form_widget(form.immatriculation, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'XXX-TUN-XXX'
                                }
                            }) }}
                            {{ form_errors(form.immatriculation) }}
                            <small class="text-muted">Format: XXX-TUN-XXX (letters and numbers only)</small>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Brand</label>
                            {{ form_widget(form.marque, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Select a brand'
                                }
                            }) }}
                            {{ form_errors(form.marque) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">State</label>
                            {{ form_widget(form.etat, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Select a state'
                                }
                            }) }}
                            {{ form_errors(form.etat) }}
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Contract</label>
                            {{ form_widget(form.contrat, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Enter contract type'
                                }
                            }) }}
                            {{ form_errors(form.contrat) }}
                        </div>

                        <div class="col-12">
                            <label class="form-label">Car Image</label>
                            {{ form_widget(form.image, {
                                'attr': {
                                    'class': 'form-control',
                                    'accept': 'image/*'
                                }
                            }) }}
                            {{ form_errors(form.image) }}
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}