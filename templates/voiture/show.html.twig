{% extends 'base_dashboard.html.twig' %}

{% block title %}Car Details - EzGo Dashboard{% endblock %}

{% block page_title %}Car Details{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Car Information</h6>
                        <div>
                            <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" class="btn btn-primary btn-sm mb-0 me-2">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                            <a href="{{ path('app_voiture_index') }}" class="btn btn-outline-secondary btn-sm mb-0">
                                <i class="fas fa-arrow-left me-2"></i>Back to list
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            {% if voiture.image %}
                                <img src="{{ asset('uploads/cars/' ~ voiture.image) }}" alt="{{ voiture.marque }}" class="img-fluid rounded shadow">
                            {% else %}
                                <img src="{{ asset('soft-ui-dashboard/assets/img/car-default.jpg') }}" alt="Default car" class="img-fluid rounded shadow">
                            {% endif %}
                        </div>
                        <div class="col-md-8">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="card card-plain">
                                        <div class="card-body p-3">
                                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Brand</h6>
                                            <p class="text-sm mb-0">{{ voiture.marque }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card card-plain">
                                        <div class="card-body p-3">
                                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Registration Number</h6>
                                            <p class="text-sm mb-0">{{ voiture.immatriculation }}</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card card-plain">
                                        <div class="card-body p-3">
                                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">State</h6>
                                            <span class="badge badge-sm bg-gradient-{{ voiture.etat == 'disponible' ? 'success' : (voiture.etat == 'en maintenance' ? 'warning' : 'info') }}">
                                                {{ voiture.etat }}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="card card-plain">
                                        <div class="card-body p-3">
                                            <h6 class="text-uppercase text-body text-xs font-weight-bolder">Contract</h6>
                                            <p class="text-sm mb-0">{{ voiture.contrat }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {% if voiture.reservations|length > 0 %}
                                <div class="mt-4">
                                    <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Reservations</h6>
                                    <div class="table-responsive">
                                        <table class="table align-items-center mb-0">
                                            <thead>
                                                <tr>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Client</th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Date</th>
                                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for reservation in voiture.reservations %}
                                                    <tr>
                                                        <td>
                                                            <p class="text-sm font-weight-bold mb-0">{{ reservation.NameRes }}</p>
                                                        </td>
                                                        <td>
                                                            <p class="text-sm font-weight-bold mb-0">{{ reservation.DateRes|date('Y-m-d') }}</p>
                                                        </td>
                                                        <td>
                                                            <span class="badge badge-sm bg-gradient-{{ reservation.statut == 'confirmÃ©' ? 'success' : (reservation.statut == 'en attente' ? 'warning' : 'danger') }}">
                                                                {{ reservation.statut }}
                                                            </span>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}