{% extends 'base_dashboard.html.twig' %}

{% block title %}Cars Management - EzGo Dashboard{% endblock %}

{% block page_title %}Cars Management{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6>Cars List</h6>
                        <a href="{{ path('app_voiture_new') }}" class="btn btn-primary btn-sm mb-0">
                            <i class="fas fa-plus me-2"></i>Add New Car
                        </a>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Car</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Registration</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">State</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Contract</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for voiture in voitures %}
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    {% if voiture.image %}
                                                        <img src="{{ asset('uploads/cars/' ~ voiture.image) }}" class="avatar avatar-sm me-3" alt="{{ voiture.marque }}">
                                                    {% else %}
                                                        <img src="{{ asset('soft-ui-dashboard/assets/img/car-default.jpg') }}" class="avatar avatar-sm me-3" alt="default">
                                                    {% endif %}
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">{{ voiture.marque }}</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-sm font-weight-bold mb-0">{{ voiture.immatriculation }}</p>
                                        </td>
                                        <td>
                                            <span class="badge badge-sm bg-gradient-{{ voiture.etat == 'disponible' ? 'success' : (voiture.etat == 'en maintenance' ? 'warning' : 'info') }}">
                                                {{ voiture.etat }}
                                            </span>
                                        </td>
                                        <td>
                                            <p class="text-sm font-weight-bold mb-0">{{ voiture.contrat }}</p>
                                        </td>
                                        <td class="align-middle">
                                            <div class="ms-auto text-end">
                                                <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}" class="btn btn-link text-dark px-3 mb-0">
                                                    <i class="fas fa-eye text-dark me-2"></i>View
                                                </a>
                                                <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}" class="btn btn-link text-dark px-3 mb-0">
                                                    <i class="fas fa-pencil-alt text-dark me-2"></i>Edit
                                                </a>
                                                <form method="post" action="{{ path('app_voiture_delete', {'id': voiture.id}) }}" style="display: inline-block" onsubmit="return confirm('Are you sure you want to delete this car?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voiture.id) }}">
                                                    <button class="btn btn-link text-danger text-gradient px-3 mb-0">
                                                        <i class="far fa-trash-alt me-2"></i>Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-secondary">No cars found</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}